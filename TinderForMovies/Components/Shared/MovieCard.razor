    }

    .movie-poster {
        height: 55%;
        background: #f0f0f0;
        display: flex;
        align-items: center;
        justify-content: center;
        border-bottom: 1px solid #eee;
        position: relative;
        overflow: hidden;
        user-select: none;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
    }

    .movie-poster img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        user-drag: none;
        -webkit-user-drag: none;
        user-select: none;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        pointer-events: none;
    }

    .placeholder-poster {
        font-size: 4rem;
        opacity: 0.5;
    }

    .movie-info {
        padding: 24px;
        flex: 1;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        position: relative;
        z-index: 2;
        background: white;
        min-height: 0;
    }

    .movie-info h2 {
        margin: 0 0 10px 0;
        font-size: 1.5rem;
        line-height: 1.2;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .movie-details {
        color: #666;
        margin-bottom: 8px;
        font-weight: 500;
        font-size: 0.9rem;
    }

    .rating {
        color: #f59e0b;
        margin-bottom: 10px;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .synopsis {
        color: #555;
        line-height: 1.5;
        font-size: 0.9rem;
        flex: 1;
        overflow-y: auto;
        overflow-x: hidden;
        padding-right: 8px;
        margin: 0;
        scrollbar-width: thin;
        scrollbar-color: rgba(0,0,0,0.3) transparent;
        touch-action: pan-y;
        -webkit-overflow-scrolling: touch;
    }

