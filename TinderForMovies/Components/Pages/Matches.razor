<style>
    .matches-container {
        padding: 20px;
        min-height: 100vh;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .matches-header {
        text-align: center;
        margin-bottom: 40px;
    }

    .matches-header h1 {
